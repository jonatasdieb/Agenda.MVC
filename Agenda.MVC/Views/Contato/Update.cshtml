@model Agenda.MVC.ViewModels.ContatoViewModel

<div class="row">
    <div class="col-md-10">
        <h4>@ViewBag.Nome</h4>
        <hr />
    </div>
</div>

@using (Html.BeginForm("Update", "Contato"))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Editar Contato</legend>
        <input name="PessoaId" value="@Model.PessoaId" hidden />
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Contato" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.DropDownList("TipoId", ViewData["ContatoTipoId"] as SelectList, null, new { @class = "form-control col-md-12", @value = "1" })
                @Html.ValidationMessageFor(model => model.TipoId, "", new { @class = "text-danger" })
            </div>
        </div>
    </fieldset>
    <div class="form-row">
        <div class="form-group col-md-3">
            <input type="submit" value="Salvar" class="btn btn-primary col-md-12" />
        </div>
        <div class="col-md-9">
            <a class="btn btn-light float-right" href="/Pessoa/GetById/@Model.PessoaId">Voltar</a>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
