@model Agenda.MVC.ViewModels.EnderecoViewModel

<div class="row">
    <div class="col-md-10">
        <h4>@ViewBag.Nome</h4>
        <hr />
    </div>
</div>

@using (Html.BeginForm("Create","Endereco"))
{
    @Html.AntiForgeryToken()   
    
    <fieldset>
        <legend>Adicionar Endereço</legend>
        <input name="PessoaId" value="@Model.PessoaId" hidden />
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Logradouro" } })
                @Html.ValidationMessageFor(model => model.Logradouro, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Número" } })
                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Complemento" } })
                @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Bairro" } })
                @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Cidade" } })
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "UF" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.DropDownList("TipoId", ViewData["EnderecoTipoId"] as SelectList, null, new { @class = "form-control col-md-12", @value="1"})
                @Html.ValidationMessageFor(model => model.TipoId, "", new { @class = "text-danger" })
            </div>
        </div>
    </fieldset>
    <div class="form-row">
        <div class="form-group col-md-3">
            <input type="submit" value="Salvar" class="btn btn-primary col-md-12" />
        </div>
        <div class="col-md-9">
            <a class="btn btn-light float-right" href="/Pessoa/GetById/@Model.PessoaId">Voltar</a>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
