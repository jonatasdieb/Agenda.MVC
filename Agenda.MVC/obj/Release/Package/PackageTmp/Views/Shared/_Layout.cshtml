<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda de Contatos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
</head>
<body>
    <style>
        * {
            border-radius: 0px !important;
        }

        .card-header {
            max-height: 30px !important;
            padding: 1px !important;
        }

            .card-header span {
                margin: 2px 2px 2px 6px !important;
            }

        .jumbotron {
            background-color: gray !important;
            /*background-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.1) 100%), url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg) !important;*/
            background-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.1) 100%), url("/Images/bg.jpg") !important;
            background: center;
        }
    </style>
  
    <div class="container body-content">
        <div class="row justify-content-md-center">
            <div class="col-md-9 jumbotron shadow-lg p-3 mb-5 rounded">
                @RenderBody()
            </div>
        </div>

        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

   

</body>
</html>
